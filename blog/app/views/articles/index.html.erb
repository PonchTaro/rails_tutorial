
<h1>投稿記事一覧</h1>
<%= link_to '記事を新しく投稿する', new_article_path %>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '詳細', article_path(article) %></td>
      <td><%= link_to '編集', edit_article_path(article) %></td>
      <td><%= link_to '削除', article_path(article), method: :delete, data: { confirm: '本当に削除しますか？'} %></td>
    </tr>
  <% end %>
</table>

